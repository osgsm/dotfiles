adjust-cell-height = 10%
adjust-cell-width = 5%
background-opacity = 1
background-blur = 20
copy-on-select = clipboard
font-size = 15
font-thicken = true
font-family = Moralerspace Neon HW
keybind = global:cmd+backquote=toggle_quick_terminal
keybind = ctrl+cmd+s=new_split:auto
keybind = ctrl+down=resize_split:down,10
keybind = ctrl+arrow_up=resize_split:up,10
keybind = ctrl+arrow_left=resize_split:left,10
keybind = ctrl+arrow_right=resize_split:right,10
macos-option-as-alt = true
quick-terminal-position = right
theme = Catppuccin Mocha
window-subtitle = working-directory
window-inherit-working-directory = true
window-save-state = always
window-padding-x = 10
window-padding-y = 10
# macos-titlebar-style = tabs

