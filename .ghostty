adjust-cell-height = 20%
adjust-cell-width = -8%
background-opacity = 1
background-blur = 20
copy-on-select = clipboard
font-size = 15
font-family = Moralerspace Neon
keybind = global:cmd+backquote=toggle_quick_terminal
keybind = ctrl+cmd+s=new_split:auto
keybind = ctrl+alt+down=resize_split:down,10
keybind = ctrl+alt+arrow_up=resize_split:up,10
keybind = ctrl+alt+arrow_left=resize_split:left,10
keybind = ctrl+alt+arrow_right=resize_split:right,10
macos-option-as-alt = right
quick-terminal-position = right
theme = Blue Matrix
window-subtitle = working-directory
window-inherit-working-directory = true
window-save-state = always
window-padding-x = 10
window-padding-y = 10

