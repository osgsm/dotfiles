copy-on-select = clipboard
window-subtitle = working-directory
window-inherit-working-directory = true
window-save-state = always
window-padding-x = 12
window-padding-y = 10
background-opacity = 0.95
background-blur = 20
theme = TokyoNight Night
selection-background = #cccccc
font-size = 15
font-thicken = true
font-family = Moralerspace Neon HW
adjust-cell-height = 5%
adjust-cell-width = 5%
quick-terminal-position = right
keybind = alt+shift+h=goto_split:next
keybind = alt+shift+l=goto_split:previous
keybind = alt+shift+j=goto_split:next
keybind = alt+shift+k=goto_split:previous
keybind = cmd+ctrl+s=new_split:auto
keybind = global:cmd+backquote=toggle_quick_terminal
macos-titlebar-style = tabs

