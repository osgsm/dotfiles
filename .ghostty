adjust-cell-height = 10%
adjust-cell-width = 5%
background-opacity = 0.95
background-blur = 20
copy-on-select = clipboard
font-size = 15
font-thicken = true
font-family = Moralerspace Neon HW
keybind = global:cmd+backquote=toggle_quick_terminal
keybind = cmd+ctrl+j=goto_split:down
keybind = cmd+ctrl+k=goto_split:up
keybind = cmd+ctrl+h=goto_split:left
keybind = cmd+ctrl+l=goto_split:right
keybind = cmd+ctrl+s=new_split:auto
keybind = alt+ctrl+j=resize_split:down,10
keybind = alt+ctrl+k=resize_split:up,10
keybind = alt+ctrl+h=resize_split:left,10
keybind = alt+ctrl+l=resize_split:right,10
macos-option-as-alt = true
quick-terminal-position = right
theme = TokyoNight Night
window-subtitle = working-directory
window-inherit-working-directory = true
window-save-state = always
window-padding-x = 10
window-padding-y = 10
# macos-titlebar-style = tabs

