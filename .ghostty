theme = GitHub Dark
font-size = 16
font-family = Moralerspace Neon 
font-thicken = true
adjust-cell-height = 2
background-opacity = 0.8
window-padding-x = 12
window-padding-y = 10
window-inherit-working-directory = true
window-save-state = always
macos-titlebar-style = tabs
macos-window-buttons = hidden
keybind = alt+shift+h=goto_split:next
keybind = alt+shift+l=goto_split:previous
keybind = alt+shift+j=goto_split:next
keybind = alt+shift+k=goto_split:previous
keybind = cmd+ctrl+s=new_split:auto

